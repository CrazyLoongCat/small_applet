<swiper autoplay="true" class="imgSwiper">
  <block wx:for="{{bannerList}}" wx:key="index">
    <swiper-item>
      <image src="{{item.imgurl}}" style="width: 100%;height: 100%;" ></image>
    </swiper-item>
  </block>
</swiper>


<view class="operation clearfloat">
  <view class="operationItem">
    <navigator url="/pages/order/orderList/index">
      <view>
        <view class="imgBox">
          <image src="../../img/chakandingdan1.png" mode="" />
        </view>
        <view>
          订单查询
        </view>
      </view>
    </navigator>
  </view>
  <view class="operationItem">
    <navigator url="/pages/order/submitOrder/index">
      <view>
        <view class="imgBox">
          <image src="../../img/fanli1.png" mode="" />
        </view>
        <view>
          提交订单
        </view>
      </view>
    </navigator>

  </view>
  <view class="operationItem">
    <navigator url="/pages/order/submitList/index">
    <view>
      <view class="imgBox">
        <image src="../../img/dingdan1.png" mode="" />
      </view>
      <view>
        提交记录
      </view>
    </view>
    </navigator>
  </view>
  <view class="operationItem" bindtap="next_calculator">
    <view>
      <view class="imgBox">
        <image src="../../img/tixing1.png" mode="" />
      </view>
      <view>
        新手教程
      </view>
    </view>
  </view>
</view>
<view class="swiperBigBox">
  <view class="clearfloat box">
    <view class="fl swiper-left">
      <!-- <van-icon name="bell"  style="color: ;font-size:18px;"/> -->
      <van-icon name="volume-o" style="color:red;font-size:18px;" />
    </view>
    <swiper class='swiper-box fl' vertical="true" autoplay="true" interval="4000" duration="500" circular="true">
      <block wx:for="{{tips1}}" wx:key="index">
        <swiper-item>
          {{item.tipMessage}} </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="clearfloat box">
    <view class="fl swiper-left">
      <!-- <van-icon name="bell"  style="color: ;font-size:18px;"/> -->
      <van-icon name="volume-o" style="color:red;font-size:18px;" />
    </view>
    <swiper class='swiper-box fl' vertical="true" autoplay="true" interval="4000" duration="500" circular="true">
      <block wx:for="{{tips2}}" wx:key="index">
        <swiper-item>
          {{item.tipMessage}} </swiper-item>
      </block>
    </swiper>
  </view>
</view>

<view class="footer ">
  <view class="footerTitle">
    免税店入口
  </view>

  <view class="clearfloat">
    <block wx:for="{{platformsList}}" wx:key="index">
      <view class="grid " data-platformUrl="{{item}}" bindtap="platformsItemClick">
        <view class="gridItem">
          <block >
            <image src="{{ baseUrl + '/webapi' +  item.platformImage}}" mode="" />
          </block>
          <view >
            {{item.platformName}}
          </view>
          <view  class="twoView">
            {{item.smallShow}}
          </view>
          <view class="treeView">
            {{item.smallTitle}}
          </view>
        </view>
      </view>
    </block>

  </view>
</view>


<view class="footer ">
  <view class="footerTitle">
    热门活动
  </view>

  <view >
    <block wx:for="{{activityList}}" wx:key="index">
      <view class="grid1 " data-platformUrl="{{item}}" bindtap="platformsItemClick">
        <view class="gridItem1">
          <view class="btitle">
            <image class="images" src="{{ item.activity_main_img}}" mode="" />
          </view>
          <view class="atitle">
             <view class="titletop">
              {{item.activity_title}}
             </view>
             <view>
               <span class="spansty">活动时间:</span>
               {{item.start_time}}
             </view>
             <view>
              <span class="spansty">活动利益:</span>
               {{item.sale_point}}
             </view>
             <view>
              <span class="spansty">商家来源:</span>
               {{item.source_name}}
             </view>
             <view class="chakanbtnbox" >
               <view class="chakanbtn" bindtap="chakan" data-app='{{item}}'>
                 立即查看
               </view>
             </view>
          </view>
        </view>
      </view>
    </block>

  </view>
</view>